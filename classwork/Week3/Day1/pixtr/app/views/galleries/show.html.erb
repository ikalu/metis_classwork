<h1> <%= @gallery.name %> </h1>

<p> <%= @gallery.description %> </p>

<% @gallery.images.each do |image|%>
  <%= image_tag image.url, width: 200 %> <br />
  <%= link_to image.name, [@gallery, image] %>

<% end%> <br />

<%= link_to "Delete", "/galleries/#{@gallery.id}", method: :delete, data: {confirm: "Are you sure?"} %> <br />

<%= link_to "Edit", "/galleries/#{@gallery.id}/edit" %> <br />

<%= link_to "Add Image", new_gallery_image_path(@gallery) %> <br />

<%= link_to "Back", root_path(@gallery) %>
